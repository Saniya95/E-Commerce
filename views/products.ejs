<%- include('partials/header', { title: "Home" }) %>
<%- include('partials/Loader') %>
<% title = "Products" %>

<div class="mt-10 bg-gray-200 text-white p-4 text-center">
  <main class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-6">
      <% products.forEach(product => { %>
        <div class="border rounded-lg p-4 bg-white dark:bg-gray-800 shadow">
          <img src="<%= product.image %>" alt="<%= product.name %>" class="h-48 w-full object-cover rounded">
          <h3 class="text-xl font-semibold mt-2 text-black dark:text-white"><%= product.name %></h3>
          <p class="text-sm text-gray-500 dark:text-gray-300">Price: â‚¹<%= product.price %></p>
          <p class="text-sm text-green-500">Discount: <%= product.discount %>%</p>
          <form action="/cart" method="POST" class="mt-3">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="number" name="quantity" value="1" class="w-16 px-2 py-1 border dark:bg-gray-700 rounded text-black">
            <button type="submit" class="ml-2 bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Add to Cart</button>
          </form>
        </div>
      <% }) %>
    </div>
  </main>
</div>

<%- include('partials/footer') %>
