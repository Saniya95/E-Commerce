<%- include('../partials/header', { title: "Edit Profile" }) %>


<main class="...">
  <div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
  <h2 class="text-2xl font-bold mb-4">✏️ Edit Your Profile</h2>

  <form action="/users/edit-profile" method="POST" enctype="multipart/form-data">
    <div class="mb-4">
      <label>Full Name</label>
      <input type="text" name="fullname" value="<%= user.fullname %>" required class="input">
    </div>

    <div class="mb-4">
      <label>Contact</label>
      <input type="text" name="contact" value="<%= user.contact %>" required class="input">
    </div>

    <div class="mb-4">
      <label>Location</label>
      <input type="text" name="location" value="<%= user.location %>" class="input">
    </div>

    <div class="mb-4">
      <label>Change Profile Picture</label><br>
      <input type="file" name="profilepic" accept="image/*">
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Update</button>
  </form>
</div>
</main>

<%- include('../partials/footer') %>
