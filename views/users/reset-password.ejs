<%- include('../partials/header', { title: "Reset Password" }) %>

<main class="max-w-md mx-auto mt-10 bg-white p-8 rounded shadow">
  <h2 class="text-2xl font-bold mb-4 text-center">Reset Password</h2>

  <form action="/users/reset-password" method="POST" class="space-y-4">
    <input type="hidden" name="email" value="<%= email %>">
    <input name="otp" type="text" placeholder="Enter OTP" class="w-full px-4 py-2 border rounded text-black">
    <input name="newPassword" type="password" placeholder="New Password" class="w-full px-4 py-2 border rounded text-black">
    <button type="submit"
            class="w-full bg-green-500 text-white py-2 rounded hover:bg-green-600">
      Reset Password
    </button>
  </form>
</main>
<%- include('../partials/footer') %>
