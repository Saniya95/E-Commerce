<% if (success && success.length > 0) { %>
  <div class="bg-green-100 text-green-800 p-2 text-center mb-4 rounded-md">
    <%= success %>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="bg-red-100 text-red-800 p-2 text-center mb-4 rounded-md">
    <%= error %>
  </div>
<% } %>


<script>
  // Show loader when any form is submitted
  document.querySelectorAll("form").forEach(form => {
    form.addEventListener("submit", () => {
      document.getElementById("loader").classList.remove("hidden");
    });
  });
</script>
<!-- Toastify Script -->
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />

<script>
  <% if (success) { %>
    Toastify({
      text: "<%= success %>",
      duration: 4000,
      gravity: "top",
      position: "right",
      style: {
        background: "#16a34a"
      },
      close: true
    }).showToast();
  <% } %>

  <% if (error) { %>
    Toastify({
      text: "<%= error %>",
      duration: 4000,
      gravity: "top",
      position: "right",
      style: {
        background: "#dc2626"
      },
      close: true
    }).showToast();
  <% } %>
</script>
