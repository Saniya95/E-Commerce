<div class="border shadow-lg rounded-lg p-4 text-center bg-white transition-transform transform hover:-translate-y-1 hover:shadow-xl duration-300">
  <!-- Image Box -->
  <div class="w-full h-48 flex items-center justify-center overflow-hidden bg-gray-100">
    <img src="<%= product.image %>" alt="<%= product.name %>" class="max-h-full max-w-full object-contain" />
  </div>

  <!-- Product Info -->
  <h2 class="text-xl font-semibold mt-2"><%= product.name %></h2>
  <p class="text-gray-600">Price: â‚¹<%= product.price %></p>
  <p class="text-green-600">Discount: <%= product.discount %>%</p>
  <p class="text-sm text-gray-500 mt-2"><%= product.description %></p>
  <p class="text-xs italic text-gray-400 mt-1">Category: <%= product.category %></p>

  <!-- Quantity + Add to Cart -->
  <div class="mt-3 flex items-center justify-center">
    <input type="number" value="1" min="1"
      class="w-16 px-2 py-1 border rounded quantity-input"
      data-id="<%= product._id %>">

    <button class="ml-2 bg-green-600 text-white px-3 py-1 rounded add-to-cart-btn"
      data-id="<%= product._id %>">
      Add to Cart
    </button>
  </div>
</div>
