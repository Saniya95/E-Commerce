<script>AOS.init();</script>

<!-- ✅ Toastify -->
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<!-- ✅ Swiper -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  new Swiper(".mySwiper", {
    loop: true,
    autoplay: { delay: 3000 },
    pagination: { el: ".swiper-pagination" }
  });
</script>

<!-- ✅ Dropdown + Toast for Guests -->
<script>
  const button = document.getElementById("menuButton");
  const dropdown = document.getElementById("menuDropdown");

  if (button && dropdown) {
    button.addEventListener("click", () => {
      dropdown.classList.toggle("hidden");
    });
  }

  const blocked = document.getElementById("profileBlocked");
  if (blocked) {
    blocked.addEventListener("click", () => {
      Toastify({
        text: "⚠️ Login required to view profile",
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: "#ef4444"
      }).showToast();
    });
  }

  const cart = document.getElementById("cartToast");
  if (cart) {
    cart.addEventListener("click", () => {
      Toastify({
        text: "⚠️ Please login to view your cart",
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: "#f97316"
      }).showToast();
    });
  }
</script>
