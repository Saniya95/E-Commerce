<%- include('partials/header', { title: "Home" }) %>
<% title = "Login" %>
<%- include('partials/Loader') %>

<div class="mt-10 bg-gray-200 text-white p-4 text-center">
  <main>
    <div class="max-w-md mx-auto mt-10 bg-white dark:bg-gray-800 p-8 rounded-xl shadow-md">
      <h2 class="text-2xl font-semibold mb-6 text-center text-black dark:text-white">Login</h2>

      <!-- ðŸ” Email/Password Login Form -->
      <form action="/users/login" method="POST" class="space-y-4">
        <input name="email" type="email" placeholder="Email" class="w-full px-4 py-2 border rounded-md dark:bg-gray-700 text-black" required>
        <input name="password" type="password" placeholder="Password" class="w-full px-4 py-2 border rounded-md dark:bg-gray-700 text-black" required>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">Login</button>
      </form>

      <!-- ðŸ”‘ Forgot Password Link -->
      <p class="text-center text-sm mt-2">
        <a href="/forgot-password" class="text-red-600 hover:underline">Forgot Password?</a>
      </p>

      <!-- ðŸ“Œ Signup Link -->
      <p class="mt-4 text-center text-sm text-gray-700 dark:text-gray-300">
        Don't have an account?
        <a href="/signup" class="text-blue-600 hover:underline font-semibold">Signup here</a>
      </p>
    </div>
  </main>
</div>

<%- include('partials/footer') %>