<section class="max-w-3xl mx-auto py-16 px-6">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Contact Us</h1>

  <form action="/contact" method="POST" class="bg-white shadow-md rounded-lg p-8 space-y-4">
    <input type="text" name="name" placeholder="Your Name" required class="w-full p-3 border rounded-md" />
    <input type="email" name="email" placeholder="Your Email" required class="w-full p-3 border rounded-md" />
    <textarea name="message" rows="5" placeholder="Your Message" required class="w-full p-3 border rounded-md"></textarea>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Send Message</button>
  </form>
</section>
